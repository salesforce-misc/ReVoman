{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "commitBodyTable": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all"
    },
    {
      "matchPackageNames": [
        "org.graalvm.sdk:graal-sdk",
        "org.graalvm.js:js"
      ],
      "enabled": false
    }
  ]
}
